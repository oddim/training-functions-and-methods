using System;

namespace ReadInt
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int outInt = 0;
            string outString = null;

            while(true)
            {
                Console.WriteLine("Конвертированное число " + ReadInt(outString, outInt));
            }
        }
        static int ReadInt(string inputString, int outInt)
        {
            bool isRead = true;

            while (isRead)
            {
                Console.Write("Введите число для конвертации в int: ");

                inputString = Console.ReadLine();

                isRead = int.TryParse(inputString, out outInt);
                if (isRead == true)
                {
                    isRead = false;
                }
                else
                {
                    isRead = true;
                }
            }
                return outInt;  
        }
    }
}
