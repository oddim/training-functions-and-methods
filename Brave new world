using System;

namespace Bravenewworld
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.CursorVisible = false;   

            char[,] map = new char[40,20];

            GenerationMap(map);

            int userX = 0;
            int userY = 0;

            ConsoleKeyInfo pressedKey = new ConsoleKeyInfo();
            
            while (true)
            {
                DrawMap(map);
   
                Console.SetCursorPosition(userX,userY);
                Console.Write("Х");

                pressedKey = Console.ReadKey();

                HandleInput(pressedKey, ref userX, ref userY, map);
            }
        }

        private static char[,] GenerationMap(char[,] map)
        {
            char barrier = 'Ж';
            
            int barrierDensity = 10;
            int barrierRandom;

            Random random = new Random();

            for (int i = 0; i < map.GetLength(0); i++)
            {
                for (int j = 0; j < map.GetLength(1); j++)
                {
                    barrierRandom = random.Next(0, barrierDensity);

                    map[i, j] = ' ';

                    if (barrierRandom == 1)
                    {
                        map[i, j] = barrier;
                    }
                }
            }

            return map;
        }

        private static void DrawMap(char[,] map)
        {
            Console.Clear();

            ConsoleColor defultColor = Console.ForegroundColor;
            ConsoleColor defultColor2 = Console.BackgroundColor;

            for (int i = 0; i < map.GetLength(1); i++)
            {
                for (int j = 0; j < map.GetLength(0); j++)
                {
                    Console.BackgroundColor = ConsoleColor.Gray;
                    Console.ForegroundColor = ConsoleColor.Red;
                    Console.Write(map[j, i]);
                }

                Console.WriteLine();
            }

            Console.BackgroundColor = defultColor2;
            Console.ForegroundColor = defultColor;
        }

        private static void HandleInput(ConsoleKeyInfo pressedKey, ref int userX, ref int userY, char[,] map)
        {
            int[] direction = GetDirection(pressedKey);

            int nextUserPositionX = userX + direction[0];
            int nextUserPositionY = userY + direction[1];

            if (nextUserPositionX >= 0 && nextUserPositionX < map.GetLength(0) && nextUserPositionY >= 0 && nextUserPositionY < map.GetLength(1) && map[nextUserPositionX, nextUserPositionY] != 'Ж')
            {
                userX = nextUserPositionX;
                userY = nextUserPositionY;
            }   
        }

        private static int[] GetDirection(ConsoleKeyInfo pressedKey)
        {
            int[] direction = {0,0};

            if (pressedKey.Key == ConsoleKey.UpArrow)
                direction[1] = -1;
            else if (pressedKey.Key == ConsoleKey.DownArrow)
                direction[1] = 1;
            else if (pressedKey.Key == ConsoleKey.LeftArrow)
                direction[0] = -1;
            else if (pressedKey.Key == ConsoleKey.RightArrow)
                direction[0] = 1;

            return direction;
        }
    }
}
