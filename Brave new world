using System;

namespace Bravenewworld
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.CursorVisible = false;
            
            const ConsoleKey ExitProgramm = ConsoleKey.Escape;

            int lengthXMap = 40;
            int lengthYmap = 20;

            char[,] map = new char[lengthXMap,lengthYmap];

            GenerateMap(map);

            int userX = 0;
            int userY = 0;

            ConsoleKeyInfo pressedKey = new ConsoleKeyInfo();

            bool isRun = true;

            while (isRun)
            {
                DrawMap(map);

                Console.SetCursorPosition(lengthXMap + 1, 0);
                Console.Write("Для выхода нажмите ESC");

                string userSlave = "Х";

                Console.SetCursorPosition(userX, userY);
                Console.Write(userSlave);

                if (pressedKey.Key == ExitProgramm)
                { 
                    isRun = false;

                    Console.Clear();

                    Console.WriteLine("Вы вышли из игры");                    
                }

                pressedKey = Console.ReadKey();

                ResearchPath(pressedKey, ref userX, ref userY, map);
            }
        }

        private static char[,] GenerateMap(char[,] map)
        {
            char barrier = 'Ж';
            
            int barrierDensity = 10;
            int barrierRandom;

            Random random = new Random();

            for (int i = 0; i < map.GetLength(0); i++)
            {
                for (int j = 0; j < map.GetLength(1); j++)
                {
                    barrierRandom = random.Next(0, barrierDensity);

                    map[i, j] = ' ';

                    if (barrierRandom == 1)
                    {
                        map[i, j] = barrier;
                    }
                }
            }

            return map;
        }

        private static void DrawMap(char[,] map)
        {
            Console.Clear();

            ConsoleColor defultColor = Console.ForegroundColor;
            ConsoleColor defultColor2 = Console.BackgroundColor;

            for (int i = 0; i < map.GetLength(1); i++)
            {
                for (int j = 0; j < map.GetLength(0); j++)
                {
                    Console.BackgroundColor = ConsoleColor.Gray;
                    Console.ForegroundColor = ConsoleColor.Red;
                    Console.Write(map[j, i]);
                }

                Console.WriteLine();
            }

            Console.BackgroundColor = defultColor2;
            Console.ForegroundColor = defultColor;
        }

        private static void ResearchPath(ConsoleKeyInfo pressedKey, ref int userX, ref int userY, char[,] map)
        {
            int[] direction = GetDirection(pressedKey);

            int nextUserPositionX = userX + direction[0];
            int nextUserPositionY = userY + direction[1];

            if (nextUserPositionX >= 0 && nextUserPositionX < map.GetLength(0) && nextUserPositionY >= 0 && nextUserPositionY < map.GetLength(1) && map[nextUserPositionX, nextUserPositionY] == ' ')
            {
                MoveUser(nextUserPositionX, nextUserPositionY, ref userX, ref userY, map);
            }
        }

        private static void MoveUser( int nextUserPositionX, int nextUserPositionY, ref int userX, ref int userY, char[,] map)
        {
            userX = nextUserPositionX;
            userY = nextUserPositionY;
        }

        private static int[] GetDirection(ConsoleKeyInfo pressedKey)
        {
            const ConsoleKey UpStep = ConsoleKey.UpArrow;
            const ConsoleKey DownStep = ConsoleKey.DownArrow;
            const ConsoleKey LeftStep = ConsoleKey.LeftArrow;
            const ConsoleKey RightStep = ConsoleKey.RightArrow;

            int[] direction = {0,0};

            if (pressedKey.Key == UpStep)
                direction[1] = -1;
            else if (pressedKey.Key == DownStep)
                direction[1] = 1;
            else if (pressedKey.Key == LeftStep)
                direction[0] = -1;
            else if (pressedKey.Key == RightStep)
                direction[0] = 1;

            return direction;
        }
    }
}
